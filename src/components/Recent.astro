---
interface RecentItem {
  id: string;
  type: "book" | "music" | "movie" | "game";
  title: string;
  thumbnail: string;
  author?: string;
  comment?: string;
}

const recentItems: RecentItem[] = [
  {
    id: "1",
    type: "book",
    title: "Designing Data-Intensive Applications",
    author: "Martin Kleppmann",
    thumbnail: "https://images-na.ssl-images-amazon.com/images/I/51ZSpMl1-LL._SX379_BO1,204,203,200_.jpg",
    comment: "The bible for distributed systems. Essential reading.",
  },
  {
    id: "2",
    type: "movie",
    title: "Dune: Part Two",
    author: "Denis Villeneuve",
    thumbnail: "https://upload.wikimedia.org/wikipedia/en/5/52/Dune_Part_Two_poster.jpeg",
    comment: "An absolute cinematic masterpiece. The sound design is incredible.",
  },
  {
    id: "3",
    type: "music",
    title: "Random Access Memories",
    author: "Daft Punk",
    thumbnail: "https://upload.wikimedia.org/wikipedia/en/a/a7/Random_Access_Memories.jpg",
    comment: "Still sounds fresh 10 years later.",
  },
  {
    id: "4",
    type: "game",
    title: "Baldur's Gate 3",
    author: "Larian Studios",
    thumbnail: "https://upload.wikimedia.org/wikipedia/en/1/12/Baldur%27s_Gate_3_cover_art.jpg",
    comment: "The depth of player choice is unmatched in modern RPGs.",
  },
];
---

<section class="space-y-6 py-6">
  <h2 class="text-2xl font-bold tracking-tight">最近</h2>
  <div class="grid gap-1 md:grid-cols-2">
    {
      recentItems.map((item) => (
        <div class="flex items-start gap-4 rounded-lg border p-3 shadow-sm transition-colors hover:bg-muted/50">
          <div class="shrink-0">
            <img
              src={item.thumbnail}
              alt={item.title}
              class="h-24 w-16 rounded-md object-cover shadow-sm"
              loading="lazy"
            />
          </div>
          <div class="flex flex-col gap-1">
            <div class="flex items-center justify-between gap-2">
              <h3 class="font-semibold leading-tight">{item.title}</h3>
            </div>
            {item.author && <p class="text-sm text-muted-foreground">{item.author}</p>}
            {item.comment && (
              <p class="text-sm italic text-foreground/80 mt-1">"{item.comment}"</p>
            )}
          </div>
        </div>
      ))
    }
  </div>
</section>
