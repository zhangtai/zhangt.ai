---
interface RecentItem {
  id: string;
  type: "book" | "music" | "movie" | "game";
  title: string;
  thumbnail: string;
  author?: string;
  comment?: string;
}

const recentItems: RecentItem[] = [
  {
    id: "1",
    type: "movie",
    title: "Zootopia 2",
    thumbnail: "https://zhangtai.oss-cn-guangzhou.aliyuncs.com/public/img/zootopia-2-poster.avif",
    comment: "",
  },
  {
    id: "2",
    type: "game",
    title: "Microsoft Flight Simulator 2024",
    thumbnail: "https://zhangtai.oss-cn-guangzhou.aliyuncs.com/public/img/ms-fs2024.avif",
    comment: "",
  },
  {
    id: "3",
    type: "game",
    title: "Balatro",
    thumbnail: "https://zhangtai.oss-cn-guangzhou.aliyuncs.com/public/img/balatro.avif",
    comment: "T.",
  },
];
---
<section class="space-y-6 py-6">
  <h2 class="text-2xl font-bold tracking-tight">最近</h2>
  <div class="grid gap-1 md:grid-cols-2">
    {
      recentItems.map((item) => (
        <div class="flex items-start gap-4 rounded-lg border p-3 shadow-sm transition-colors hover:bg-muted/50">
          <div class="shrink-0">
            <img
              src={item.thumbnail}
              alt={item.title}
              class="h-24 w-16 rounded-md object-cover shadow-sm"
              loading="lazy"
            />
          </div>
          <div class="flex flex-col gap-1">
            <div class="flex items-center justify-between gap-2">
              <h3 class="font-semibold leading-tight">{item.title}</h3>
            </div>
            {item.author && <p class="text-sm text-muted-foreground">{item.author}</p>}
            {item.comment && (
              <p class="text-sm italic text-foreground/80 mt-1">"{item.comment}"</p>
            )}
          </div>
        </div>
      ))
    }
  </div>
</section>
